<Window x:Class="grzyClothTool.Views.ProjectSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        Title="Project Setup"
        Width="500"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource Brush50}"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style x:Key="ConfirmButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Brush600}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource Brush300}"/>
                    <Setter Property="Foreground" Value="{DynamicResource Brush500}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush700}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ProjectTypeCard" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="CardBorder"
                                Background="{DynamicResource Brush100}"
                                BorderBrush="{DynamicResource Brush300}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,4"
                                Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Ellipse x:Name="RadioOuter"
                                         Grid.Column="0"
                                         Width="20" Height="20"
                                         Stroke="{DynamicResource Brush400}"
                                         StrokeThickness="2"
                                         Fill="Transparent"
                                         VerticalAlignment="Top"
                                         Margin="0,2,12,0"/>
                                <Ellipse x:Name="RadioInner"
                                         Grid.Column="0"
                                         Width="10" Height="10"
                                         Fill="{DynamicResource Brush600}"
                                         VerticalAlignment="Top"
                                         Margin="5,7,17,0"
                                         Visibility="Hidden"/>
                                
                                <ContentPresenter Grid.Column="1" 
                                                  VerticalAlignment="Top"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="{DynamicResource Brush600}"/>
                                <Setter TargetName="CardBorder" Property="Background" Value="{DynamicResource Brush200}"/>
                                <Setter TargetName="RadioOuter" Property="Stroke" Value="{DynamicResource Brush600}"/>
                                <Setter TargetName="RadioInner" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="{DynamicResource Brush150}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0"
                   Text="{Binding DialogTitle}"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource Brush950}"
                   Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Project Name"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource Brush700}"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="ProjectNameTextBox"
                     Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="14"
                     Padding="12,10"
                     Background="{DynamicResource Brush100}"
                     Foreground="{DynamicResource Brush950}"
                     BorderBrush="{DynamicResource Brush300}"
                     BorderThickness="1"/>
            
            <Border Background="#fef3c7"
                    BorderBrush="#fcd34d"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="8,6"
                    Margin="0,8,0,0"
                    Visibility="{Binding ShowProjectExistsWarning, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <icons:MaterialIcon Kind="AlertOutline" 
                                       Width="16" Height="16"
                                       Foreground="#d97706"
                                       Margin="0,0,6,0"
                                       VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ProjectExistsWarning}"
                               FontSize="12"
                               Foreground="#92400e"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <Border Grid.Row="2"
                Background="#dbeafe"
                BorderBrush="#93c5fd"
                BorderThickness="1"
                CornerRadius="6"
                Padding="12,10"
                Margin="0,0,0,16"
                Visibility="{Binding ShowDrawableCount, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <icons:MaterialIcon Kind="Information" 
                                   Width="18" Height="18"
                                   Foreground="#2563eb"
                                   Margin="0,0,8,0"/>
                <TextBlock Text="{Binding DrawableCountMessage}"
                           FontSize="13"
                           Foreground="#1e40af"/>
            </StackPanel>
        </Border>
        
        <StackPanel Grid.Row="3">
            <TextBlock Text="Project Type"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource Brush700}"
                       Margin="0,0,0,8"/>
            
            <RadioButton x:Name="SelfContainedRadio"
                         IsChecked="{Binding IsSelfContained}"
                         Style="{StaticResource ProjectTypeCard}"
                         GroupName="ProjectType">
                <StackPanel>
                    <TextBlock Text="Self-contained"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource Brush950}"/>
                    <TextBlock Text="Files are copied to project folder. Project can be moved or shared easily."
                               FontSize="12"
                               Foreground="{DynamicResource Brush600}"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </RadioButton>
            
            <RadioButton x:Name="ExternalRadio"
                         IsChecked="{Binding IsExternal}"
                         Style="{StaticResource ProjectTypeCard}"
                         GroupName="ProjectType">
                <StackPanel>
                    <TextBlock Text="External"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource Brush950}"/>
                    <TextBlock Text="Files stay in original locations. Uses less disk space but not portable."
                               FontSize="12"
                               Foreground="{DynamicResource Brush600}"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </RadioButton>
        </StackPanel>
        
        <Border Grid.Row="4"
                Background="#fef3c7"
                BorderBrush="#fcd34d"
                BorderThickness="1"
                CornerRadius="6"
                Padding="12,10"
                Margin="0,16,0,0"
                VerticalAlignment="Top"
                Visibility="{Binding IsExternal, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <icons:MaterialIcon Kind="AlertOutline" 
                                   Width="18" Height="18"
                                   Foreground="#d97706"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Top"/>
                <TextBlock Text="Moving or deleting original files will break the project."
                           FontSize="12"
                           Foreground="#92400e"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Cancel"
                    Width="100"
                    Height="36"
                    Margin="0,0,12,0"
                    Background="{DynamicResource Brush200}"
                    Foreground="{DynamicResource Brush900}"
                    BorderThickness="0"
                    Click="Cancel_Click"/>
            <Button x:Name="ConfirmButton"
                    Content="{Binding ConfirmButtonText}"
                    Width="120"
                    Height="36"
                    Style="{StaticResource ConfirmButtonStyle}"
                    IsEnabled="{Binding IsValid}"
                    Click="Confirm_Click"/>
        </StackPanel>
    </Grid>
</Window>
